def ajout_etudiant(dico_data,dico_matiere):
    nom_etudiant=raw_input("Donnez le NOM et Prénom de l'élève à ajouter (exemple DUPONT Jean) : ")
    if nom_etudiant.strip()[0]!=nom_etudiant.strip()[0].upper():
        print 'Réessayez svp vous etes nul !'
        nom_etudiant=raw_input("Donnez le NOM et Prénom de l'élève à ajouter (exemple DUPONT Jean) : ")
    notes=[]
    for matiere in dico_matiere.keys():
        note_etudiant=raw_input("Donnez la note de : ' "+matiere+" ' de l'étudiant : " + nom_etudiant+" (s'il n'a pas de notes, rentrez un '_') : ")
        if note_etudiant!='_':
            notes.append(note_etudiant)
    dico_data[nom_etudiant]=notes
    return dico_data
  
  
    
   
