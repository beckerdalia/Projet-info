
def sauvegarde_donnees(dico_data, dico_matiere):
    nom_fichier=raw_input("Choisissez le nom du fichier : ")
    try:
        open(nom_fichier,"a")
        X= True
    except:
        X= False
    print X
    if X==True:
        reponse=raw_input("Le fichier existe, etes-vous sur de vouloir le remplacer? Repondez: Oui ou Non :")
        if reponse.upper()=='OUI':
            with open(nom_fichier,"w") as fichier:
                fichier.writelines("".join(dico_matiere.keys())+'\n'+"\n".join(dico_data.keys()))
        else:

            return None

